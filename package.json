{
  "name": "anime-recommendations",
  "version": "1.0.0",
  "description": "Anime recommendation engine with shareable URLs",
  "main": "worker.js",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "db:create": "wrangler d1 create anime-recommendations-db",
    "db:init": "wrangler d1 execute anime-recommendations-db --remote --file=./schema.sql",
    "db:local": "wrangler d1 execute anime-recommendations-db --local --file=./schema.sql",
    "queue:create": "wrangler queues create anime-details-queue"
  },
  "dependencies": {
    "@cloudflare/kv-asset-handler": "^0.4.0",
    "nanoid": "^5.0.4"
  },
  "devDependencies": {
    "wrangler": "^4.47.0"
  }
}
